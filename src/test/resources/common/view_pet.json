{
	"name": "user_user_type",
	"comments": [
		"a view on users and user types"
	],
	"asClause": [
		" select ",
		"u.nm_username, ",
		"u.id_user, ",
		"ut.nm_user_type",
		"from ",
		"user u, ",
		"user_type ut",
		" where ",
		"u.id_user_type = ut.id_user_type"
	],
	
	"fields": [
		{ "name": "id_user", "type": "bigint", "nullable": false, "foreignKey": "user.id_user" },
		{ "name": "nm_username", "type": "varchar", "length": "64", "nullable": false },
		{ "name": "nm_user_type", "type": "varchar", "length": "64", "nullable": false }
	],
	"finders": [
		{
			"name": "findByNmUser",
			"whereClause": "where nm_username = ?",
			"whereFields": [
				"nm_username"
			]
		}
	]
}