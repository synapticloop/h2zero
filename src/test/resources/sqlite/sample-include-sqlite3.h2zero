{
"options": {
	"metrics": false,
	"database": "sqlite3",

	"generators": [
		"java",
		"sql",
		"reports",
		"tests"
	],

	"validators": {
		"UpdaterNameValidator": {
			"allowablePrefixes": "reset,set,update"
		},

		"FinderNameValidator": {
			"allowablePrefixes": "find,calculate"
		}
	},

	"output": {
		"code": "src/test/java/",
		"resources": "src/test/resources/",

		"testCode": "src/test/java/",
		"testResources": "src/test/resources/",

		"build": "build/"
	}
},

"database": {
	"schema": "sample",
	"package": "com.synapticloop.sample.h2zero.sqlite3",
	"defaultStatementCacheSize": 1024,

	"tables": [
		{ "include": "../common/user_type.json" },
		{ "include": "../common/user_title.json" },
		{ "include": "../common/user.json" },
		{ "include": "../common/pet_type.json" },
		{ "include": "../common/pet.json" },
		{ "include": "../common/user_pet.json" },
		{ "include": "../common/author_status.json" },
		{ "include": "../common/author.json" },

		{ "include": "./all_types.sqlite3.json" }
	],


	"views": [
		{ "include": "../common/view_pet.json" },
	],
}
}